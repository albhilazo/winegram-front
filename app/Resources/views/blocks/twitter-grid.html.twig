{% if tweets is not empty %}

  {% for social_item in tweets %}
    <div class="col s12 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{ social_item._source.username }}</span>
          </p>{{ social_item._source.original_text }}</p>
        </div>
        <div class="card-action">
          <a href="#">{{ social_item._source.text_sentiment }}</a>
          <a href="#">{{ social_item._source.text_tweet_sentiment }}</a>
        </div>
      </div>
    </div>
  {% endfor %}
{% else %}
  <p>No hay Tweets recientes para este producto.</p>
{% endif %}
