{% if comments is not empty %}

  {% for social_item in comments %}
    {% if social_item._source.media %}

      <div class="col s12 l3">
        <div class="card social-image-card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="{{ social_item._source.media | default('#') }}">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4 ellipsis">
              {{ social_item._source.username | default('') }}
            </span>
            <p class="social-image-card-text ellipsis">{{ social_item._source.original_text | default('') }}</p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">
              {{ social_item._source.username | default('') }}
              <i class="material-icons right">close</i>
            </span>
            <p>{{ social_item._source.original_text | default('') }}</p>
            <div class="card-action">
              <div class="clearfix bshadow0 pbs">
              {% if social_item._source.text_sentiment == 'positive' %}
              <span class="icon-happy icons-good-size green-text"></span>
              {% endif %}
              {% if social_item._source.text_sentiment == 'neutral' %}
                <span class="icon-neutral icons-good-size orange-text"></span>
              {% endif %}
              {% if social_item._source.text_sentiment == 'negative' %}
                <span class="icon-sad icons-good-size red-text"></span>
              {% endif %}
              {% if social_item._source.text_tweet_sentiment == 'positive' %}
                <span class="icon-happy icons-good-size green-text"></span>
              {% endif %}
              {% if social_item._source.text_tweet_sentiment == 'neutral' %}
                <span class="icon-neutral icons-good-size orange-text"></span>
              {% endif %}
              {% if social_item._source.text_tweet_sentiment == 'negative' %}
                <span class="icon-sad icons-good-size red-text"></span>
              {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>

    {% else %}

      <div class="col s12 l3">
        <div class="card social-card">
          <div class="card-content">
            <span class="card-title grey-text text-darken-4">
              {{ social_item._source.username | default('') }}
            </span>
            <p class="social-card-text"> {{ social_item._source.original_text | default('') }}</p>
          </div>
          <div class="card-action">
            <div class="clearfix bshadow0 pbs">
              {% if social_item._source.text_sentiment == 'positive' %}
                <span class="icon-happy icons-good-size green-text"></span>
              {% endif %}
              {% if social_item._source.text_sentiment == 'neutral' %}
                <span class="icon-neutral icons-good-size orange-text"></span>
              {% endif %}
              {% if social_item._source.text_sentiment == 'negative' %}
                <span class="icon-sad icons-good-size red-text"></span>
              {% endif %}
              {% if social_item._source.text_tweet_sentiment == 'positive' %}
                <span class="icon-happy icons-good-size green-text"></span>
              {% endif %}
              {% if social_item._source.text_tweet_sentiment == 'neutral' %}
                <span class="icon-neutral icons-good-size orange-text"></span>
              {% endif %}
              {% if social_item._source.text_tweet_sentiment == 'negative' %}
                <span class="icon-sad icons-good-size red-text"></span>
              {% endif %}
            </div>
          </div>
        </div>
      </div>

    {% endif %}
  {% endfor %}

{% else %}

<p>No se han encontrado comentarios sobre este producto.</p>

{% endif %}
