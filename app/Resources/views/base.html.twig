<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Winegram{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/materialize.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/icomoon-style.css') }}" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        <nav>
          <div class="nav-wrapper teal darken-3 row">
            <div class="col s12 l10 offset-l1">
              <div class="row">
                <a href="{{ url('home') }}" class="brand-logo">Winegram</a>
                <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
                <div class="col s12 l4 offset-l4 hide-on-med-and-down">
                  <form action="{{ url('search') }}">
                    <div class="input-field">
                      <input id="search" type="search" name="query" required>
                      <label for="search"><i class="material-icons">search</i></label>
                      <i class="material-icons">close</i>
                    </div>
                  </form>
                </div>
                <ul class="right hide-on-med-and-down">
                  <li><a href="{{ url('home') }}">Home</a></li>
                  <li><a href="{{ url('top-selling') }}">Top ventas</a></li>
                </ul>
                <ul id="nav-mobile" class="side-nav">
                  <div class="mobile-search-wrapper teal darken-3">
                    <form action="{{ url('search') }}">
                      <div class="input-field">
                        <input id="search" type="search" name="query" required>
                        <label for="search"><i class="material-icons">search</i></label>
                        <i class="material-icons">close</i>
                      </div>
                    </form>
                  </div>
                  <li><a href="{{ url('home') }}">Home</a></li>
                  <li><a href="{{ url('top-selling') }}">Top ventas</a></li>
                </ul>
              </div>
            </div>
          </div>
        </nav>

        {% block body %}{% endblock %}

          <footer class="page-footer teal darken-3">
            <div class="container">
            <p class="grey-text text-lighten-4">Â© 2016 Winegram</p>
            </div>
          </footer>

        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
        <script type="text/javascript">
            $( document ).ready(function(){
                $(".button-collapse").sideNav();
            });
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
