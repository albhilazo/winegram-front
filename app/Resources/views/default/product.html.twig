{% extends 'base.html.twig' %}

{% block body %}
<main class="container ">
  <div class="product-sheet row">
  <div class="col s12 m10">

    <section class="row section scrollspy">
      <h3 class="product-name">{{ product.name }}</h3>
      <h5 class="product-maker">{{ product.maker }}</h5>
    </section>

    <section id="product-sheet" class="row section scrollspy">
      <div class="col s12 m6">
        <dl class="product-attributes card-panel">
          <dt>Añada</dt>
          <dd>{{ product.vintage }}</dd>
          <dt>Tipo de vino</dt>
          <dd>{{ product.wine_type }}</dd>
          <dt>Volumen</dt>
          <dd>{{ product.bottle_volume }} ml</dd>
          <dt>Vol. de alcohol</dt>
          <dd>{{ product.alcohol_volume }}%</dd>
          <dt>Uvas</dt>
          <dd>
            <ul>
            {% for grape_type in product.grapes %}
              <li class="chip">{{ grape_type }}</li>
            {% endfor %}
            </ul>
          </dd>
        </dl>
      </div>

      <div class="col s12 m3">
        <div class="uvinum-data card-panel center-align">
          <img class="uvinum-logo" src="{{ asset('images/uvinum.png') }}">
          <span class="uvinum-rank">{{ product.rank }}</span>
          <a class="uvinum-buy waves-effect waves-light btn">Comprar<i class="material-icons right">shopping_cart</i></a>
        </div>
      </div>

      <div class="col s12 m3">
        <img class="product-image materialboxed" src="{{ product.image_full }}" data-caption="{{ product.long_name }}">
      </div>
    </section>

    <section id="product-description" class="row section scrollspy">
      <p class="product-description">{{ product.producer_description }}</p>
    </section>

    <div class="divider"></div>
    <section id="product-twitter" class="row section scrollspy">
      {% include "blocks/twitter-grid.html.twig" %}
    </section>

    <div class="divider"></div>
    <section id="product-instagram" class="row section scrollspy">
      {% include "blocks/instagram-grid.html.twig" %}
    </section>

  </div>

  <div class="col hide-on-small m2">
    <ul class="product-table-of-contents">
      <li><a href="#product-sheet">Ficha producto</a></li>
      <li><a href="#product-description">Descripción</a></li>
      <li><a href="#product-twitter">Twitter</a></li>
      <li><a href="#product-instagram">Instagram</a></li>
    </ul>
  </div>

  </div>
</main>
{% endblock %}


{% block javascripts %}
  <script type="text/javascript">
    $('.product-table-of-contents').pushpin({ top: $('.product-table-of-contents').offset().top });
    $('.scrollspy').scrollSpy();
  </script>
{% endblock %}
